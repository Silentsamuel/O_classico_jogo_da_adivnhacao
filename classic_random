numero_secreto = random.randint(1, 100)
tentativas = 0

print("\nğŸ’¡ Dica: Ã‰ um nÃºmero entre 1 e 100")

while True:
    try:
        tentativa = int(input("\nSua tentativa: "))
        tentativas += 1
        
        if tentativa < numero_secreto:
            print("ğŸ“ˆ Mais alto! Tente novamente.")
        elif tentativa > numero_secreto:
            print("ğŸ“‰ Mais baixo! Tente novamente.")
        else:
            print(f"\nğŸ‰ PARABÃ‰NS! VocÃª acertou em {tentativas} tentativas!")
            print(f"O nÃºmero era realmente {numero_secreto}!")
            break
            
    except ValueError:
        print("âŒ Por favor, digite apenas nÃºmeros!")

